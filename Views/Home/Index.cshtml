@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome from Shreyan Maity</h1>
    <h3>Hello World!!!</h3>
    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Demo Home Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        header {
            background-color: #333;
            color: white;
            padding: 15px 0;
            text-align: center;
        }
        nav {
            text-align: center;
            margin-top: 10px;
        }
        nav a {
            color: white;
            text-decoration: none;
            padding: 10px 20px;
            display: inline-block;
        }
        .hero {
            background-color: #4CAF50;
            color: white;
            padding: 100px 0;
            text-align: center;
        }
        .container {
            padding: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }
        .services {
            display: flex;
            justify-content: space-between;
            margin: 20px 0;
        }
        .service {
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            width: 30%;
            text-align: center;
        }
        .contact-form {
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin-top: 20px;
        }
        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px 0;
            margin-top: 20px;
        }
    </style>
</head>
<body>

<header>
    <h1>Welcome to My Demo Website</h1>
    <nav>
        <a href="#home">Home</a>
        <a href="#services">Services</a>
        <a href="#contact">Contact</a>
    </nav>
</header>

<section class="hero" id="home">
    <h2>Build Your Future With Us</h2>
    <p>Providing the best services for your needs</p>
</section>

<div class="container">
    <section class="services" id="services">
        <div class="service">
            <h3>Web Development</h3>
            <p>We create stunning and responsive websites for businesses of all sizes.</p>
        </div>
        <div class="service">
            <h3>Cloud Solutions</h3>
            <p>Our cloud solutions ensure scalability and security for your operations.</p>
        </div>
        <div class="service">
            <h3>DevOps Services</h3>
            <p>Optimize your infrastructure and processes with our DevOps expertise.</p>
        </div>
    </section>

    <section class="contact-form" id="contact">
        <h3>Contact Us</h3>
        <form>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required><br><br>
            
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required><br><br>
            
            <label for="message">Message:</label><br>
            <textarea id="message" name="message" rows="5" required></textarea><br><br>
            
            <button type="submit">Send Message</button>
        </form>
    </section>
</div>

<footer>
    <p>&copy; 2024 Demo Website | All Rights Reserved</p>
</footer>

</body>
</html>

    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
